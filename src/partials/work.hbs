{{#if resume.work.length}}
<section id="work">
	<h2>Work</h2>
	{{#each resume.work}}
	<div class="item">
		{{#if company}}
		<h3 class="name">
			{{company}}
		</h3>
		{{/if}}
		{{#if position}}
		<div class="position">
			<h4>{{position}}</h4>
		</div>
		{{/if}}
		<div class="date">
			{{#if startDate}}
			<span class="startDate">
				<p>{{startDate}}</p>
			</span>
			{{/if}}
			{{#if endDate}}
			<span class="endDate">
				<p>- {{endDate}}</p>
			</span>
			{{else}}
			<span class="endDate">
				- Present
			</span>
			{{/if}}
		</div>

		{{#if website}}
		<div class="website">
			<a href="{{website}}">{{website}}</a>
		</div>
		{{/if}}
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
		{{#if highlights.length}}
		<ul class="highlights">
			{{#each highlights}}
			<li>
				<p>{{.}}</p>
			</li>
			{{/each}}
		</ul>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}