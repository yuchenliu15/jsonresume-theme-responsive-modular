{{#if resume.awards.length}}
<section id="awards">
	<h2>Awards</h2>
	{{#each resume.awards}}
	<div class="item">
		{{#if title}}
		<div class="title">
			<h3>{{title}}</h3>
		</div>
		{{/if}}
		{{#if date}}
		<div class="date">
			<p>{{date}}</p>
		</div>
		{{/if}}
		{{#if awarder}}
		<div class="awarder">
			<p>{{awarder}}</p>
		</div>
		{{/if}}
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}